<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecureNoteApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SecureNoteApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myfloatButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/black</item>
        <item name="backgroundTint">#ED9615</item>
        <item name="shapeAppearanceOverlay">@style/shapeFloatButton</item>
    </style>

    <style name="shapeFloatButton">
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="appBottom" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/colorBottomAppBar</item>
    </style>
    <style name="Theme.SecureNoteApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SecureNoteApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>