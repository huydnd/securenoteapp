<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMiscellaneous"
    android:orientation="vertical"
    android:background="@drawable/background_miscellaneous"
    app:behavior_peekHeight="42dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textMiscellaneous"
        android:fontFamily="@font/catamaran"
        android:gravity="center"
        android:text="OPTIONAL"
        android:textSize="23dp"
        android:textColor="@color/white"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutNoteColor"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran"
                android:includeFontPadding="false"
                android:text="Pick color"
                android:textColor="@color/white"
                android:textSize="22dp"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp">

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/viewcolor1"
                    android:background="@drawable/background_note_color1" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imagecolor1"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_done_24"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp">

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/viewcolor2"
                    android:background="@drawable/background_note_color2" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imagecolor2"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp">

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/viewcolor3"
                    android:background="@drawable/background_note_color3" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imagecolor3"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp">

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/viewcolor4"
                    android:background="@drawable/background_note_color4" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imagecolor4"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                >

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/viewcolor5"
                    android:background="@drawable/background_note_color5" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imagecolor5"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp">

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/viewcolor6"
                    android:background="@drawable/background_note_color6" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imagecolor6"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/viewcolor7"
                    android:background="@drawable/background_note_color7" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imagecolor7"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/layoutAddImage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_image_24"
            app:tint="@color/colorIcon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/catamaran"
            android:includeFontPadding="false"
            android:text="Add image"
            android:textColor="@color/colorIcon"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAddUrl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_add_circle_outline_24"
            app:tint="@color/colorIcon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/catamaran"
            android:includeFontPadding="false"
            android:text="Add Url"
            android:textColor="@color/colorIcon"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLock"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_lock_24"
            app:tint="@color/colorIcon" />

        <Switch
            android:id="@+id/idLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="9"/>

    </LinearLayout>


</LinearLayout>