<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/noteCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="5dp"
    app:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:id="@+id/linearLayoutNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageNote"
            android:adjustViewBounds="true"
            android:visibility="gone"
            app:riv_corner_radius_top_left="20dp"
            app:riv_corner_radius_top_right="20dp"/>
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/catamaran"
            android:includeFontPadding="false"
            android:text="***********"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textSubtitle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/catamaran"
            android:includeFontPadding="false"
            android:textColor="@color/textSubtitle"
            android:textSize="20dp"
            android:text="*********"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDateTime2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/catamaran"
            android:includeFontPadding="false"
            android:textColor="@color/textSubtitle"
            android:textSize="14dp"
            android:text="20-3-2010"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textPriority"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/catamaran"
                android:includeFontPadding="false"
                android:textColor="@color/textSubtitle"
                android:textSize="16dp"
                android:layout_weight="1"
                android:text="1"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:id="@+id/popupMenuImg"
                android:src="@drawable/ic_action_3_dot"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                app:tint="@color/white" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>